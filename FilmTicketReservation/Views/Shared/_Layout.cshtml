<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FilmTicketReservation</title>
    <!-- <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />  -->
    <link rel="stylesheet" href="~/css//boostWatchTheme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/FilmTicketReservation.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container-fluid">
            <a class="navbar-brand fs-2" href="#">G8</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor02">
              <ul class="navbar-nav me-auto">
                <li class="nav-item">
                  <a class="nav-link active" asp-controller= "Home" asp-action= "Index">Home
                    <span class="visually-hidden">(current)</span>
                  </a>
                </li>
                <li class="nav-item ">
                  <a class="nav-link" asp-controller= "Home" asp-action= "About">About</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" asp-controller= "Movies" asp-action= "Category">Movies</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" asp-controller= "Home" asp-action= "Contact">Contact</a>
                </li>     
              </ul>
              <partial name="_LoginPartial" />
              <form class="d-flex">
                <input class="form-control me-sm-2" type="text" placeholder="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
              </form>
            </div>
          </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
   
    <footer class="border-top text-muted mt-5 ">
        <div class="container mt-2">
            <!--&copy; 2022 - G8 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> -->
            <div class = "row ">
                <ul class = "list-group list-group-flush col-3 fw-bold">G8 AMERICA
                    <li class = "list-group-item fw-normal">Introducing</li>
                    <li class = "list-group-item fw-normal">Online Benefits</li>
                    <li class = "list-group-item fw-normal">Gifts</li>
                </ul>
                <ul class="list-group list-group-flush col-3 fw-bold">POLICY
                  <li class="list-group-item fw-normal">General Terms</li>
                  <li class="list-group-item fw-normal">Trading Terms</li>
                  <li class="list-group-item fw-normal">Payment Policy</li>
                  <li class="list-group-item fw-normal">Privacy Policy</li>
                  <li class="list-group-item fw-normal">Questions</li>
                </ul>
                <ul class="list-group list-group-flush col-3 fw-bold">CONNECT TO US
           
                </ul>
                <ul class="list-group col-3 list-group-flush fw-bold">CUSTOMER CARING
                  <li class="list-group-item fw-normal">Hotline: 1900 6017</li>
                  <li class="list-group-item fw-normal">Working time : 8:00 - 22:00</li>
                  <li class="list-group-item fw-normal">Supported Email</li>
                  
                </ul>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!----- <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> --->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
